<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/nav-bar') %>
    <main>
        <form class="product-form" action="/admin/<% if(isEditing) {%>edit-product<% } else { %> add-product <% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(isEditing) {%> <%= product.title %> <%}else { %>'' <% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(isEditing) {%> <%= product.imageUrl %> <%}else { %>'' <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(isEditing) {%> <%= product.price %> <%}else { %>'' <% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(isEditing) {%> <%= product.description %> <%}else { %>'' <% } %></textarea>
            </div>
            <button type="submit">Add Product</button>
        </form>
    </main>
<%- include('../includes/end') %>